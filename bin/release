#!/usr/bin/env ruby

DIR = "#{ARGV[0]}/vendor/unixodbc"

puts <<-CONF
---
config_vars:
  PATH: "#{ENV['PATH']}:#{DIR}/bin"
  ODBC-DIR: "#{DIR}"
  LD_LIBRARY_PATH: "#{DIR}/lib:#{ENV['LIBRARY_PATH']}"
  LIBRARY_PATH: "#{DIR}/lib:#{ENV['LIBRARY_PATH']}"
  CPPATH: "#{DIR}/include:#{ENV['CPPATH']}"
  CPATH: "#{DIR}/include:#{ENV['CPATH']}"
CONF
