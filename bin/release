#!/usr/bin/env ruby

puts <<-EOF
---
config_vars:
  PATH: "vendor/unixodbc/bin:$PATH"
  ODBC-DIR: "vendor/unixodbc"
  LD_LIBRARY_PATH: "vendor/unixodbc/lib:$LIBRARY_PATH"
  LIBRARY_PATH: "vendor/unixodbc/lib:$LIBRARY_PATH"
  CPPATH: "vendor/unixodbc/include:$CPPATH"
  CPATH: "vendor/unixodbc/include:$CPATH"
EOF
