#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found an odbc.ini"

UNIXODBC_TGZ=$PWD"lib/unixODBC-2.3.1.tgz"
ODBC_DIR="unixodbc"

echo "Making folder." | indent
mkdir -p $1/$ODBC_DIR
echo $UNIXODBC_TGZ
echo "Extracting ODBC libraries..." | indent
tar -C $1/$ODBC_DIR -zxvf $UNIXODBC_TGZ
