#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found an odbc.ini"

UNIXODBC_TGZ="https://s3.amazonaws.com/chameleon-heroku-assets/heroku-unixODBC-2.3.1.tar.gz"
ODBC_DIR="vendor/unixodbc"

echo "Making folder." | indent
mkdir -p $1/$ODBC_DIR

echo "Downloading and extracting archive from "$UNIXODBC_TGZ | indent
curl $UNIXODBC_TGZ -o - | tar -xz -C $1/$ODBC_DIR -f -

echo "Done." | indent

