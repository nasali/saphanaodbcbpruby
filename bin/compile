#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Found an odbc.ini"

# if odbc.ini has contents, display them (indented to align)
# otherwise error

if [ ! -s $1/odbc.ini ]; then
  echo "odbc.ini was empty"
  exit 1
else
  echo "odbc.ini is not empty, here are the contents" | indent
  cat $1/odbc.ini
fi | indent
