#!/usr/bin/env ruby

def indent msg 
  puts "      #{msg}"
end

puts "-----> Found an odbc.ini"

S3BUCKET="https://s3.amazonaws.com/chameleon-heroku-assets"
UNIX_ODBC_TGZ="#{S3BUCKET}/heroku-unixODBC-2.3.1.tar.gz"
RUBY_ODBC_TGZ="#{S3BUCKET}/ruby-odbc-0.99994.tar.gz"
UNIX_ODBC_DIR="vendor/unixodbc"
RUBY_ODBC_DIR="vendor/rubyodbc"

indent "Making folders..."
puts `mkdir -p #{ARGV[0]}/#{UNIX_ODBC_DIR}`
puts `mkdir -p #{ARGV[0]}/#{RUBY_ODBC_DIR}`

indent "Downloading and extracting archives from #{S3BUCKET}..."
puts `curl #{UNIX_ODBC_TGZ} -o - | tar -xz -C #{ARGV[0]}/#{UNIX_ODBC_DIR} -f - `
puts `curl #{RUBY_ODBC_TGZ} -o - | tar -xz -C #{ARGV[0]}/#{RUBY_ODBC_DIR} -f - `

indent "Compiling ODBC driver..."

puts "===== Done."

