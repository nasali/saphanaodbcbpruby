#!/usr/bin/env ruby

require 'tempfile'
require 'fileutils'

def indent msg 
  puts "       #{msg}"
end

puts "-----> Found an odbc.ini"

S3BUCKET="https://s3.amazonaws.com/chameleon-heroku-assets"
UNIX_ODBC_TGZ="#{S3BUCKET}/heroku-unixODBC-2.3.1.tar.gz"
RUBY_ODBC_TGZ="#{S3BUCKET}/ruby-odbc-0.99994.tar.gz"
UNIX_ODBC_DIR="#{ARGV[0]}/vendor/unixodbc"
RUBY_ODBC_DIR="#{ARGV[0]}/vendor/rubyodbc"
EXT="#{RUBY_ODBC_DIR}/ruby-odbc-0.99994/ext"
MAKE_FILE = "#{EXT}/Makefile"

indent "Making folders..."
puts `mkdir -p #{UNIX_ODBC_DIR}`
puts `mkdir -p #{RUBY_ODBC_DIR}`

indent "Downloading and extracting archives from #{S3BUCKET}..."
result = `curl #{UNIX_ODBC_TGZ} -o - | tar -xz -C #{UNIX_ODBC_DIR} -f - `
result = `curl #{RUBY_ODBC_TGZ} -o - | tar -xz -C #{RUBY_ODBC_DIR} -f - `

indent "Setting environment variables..."
ENV['LD_LIBRARY_PATH'] = "#{UNIX_ODBC_DIR}/lib:$LIBRARY_PATH"
ENV['LIBRARY_PATH'] = "#{UNIX_ODBC_DIR}/lib:$LIBRARY_PATH"
ENV['CPPATH'] = "#{UNIX_ODBC_DIR}/include:$CPPATH"
ENV['CPATH'] = "#{UNIX_ODBC_DIR}/include:$CPATH"
ENV['ODBC-DIR'] = "#{UNIX_ODBC_DIR}"
indent "Set ODBC dir to #{ENV['ODBC-DIR']}"

indent "About to configure ODBC driver..."
result = `ruby -C#{EXT} extconf.rb --prefix=#{RUBY_ODBC_DIR} --with-unixodbc=#{UNIX_ODBC_DIR} --enable-dlopen --with-odbc-dir=#{UNIX_ODBC_DIR}`

# ZOMG!
indent "Fixing Makefile"

temp_file = Tempfile.new('makefilehack')

begin
  File.open(MAKE_FILE, 'r') do |file|
    file.each_line do |line|
      if line =~ /^prefix = (.+)$/
        temp_file.puts "prefix = #{RUBY_ODBC_DIR}"
      elsif line =~ /^sitearchdir = (.+)$/
        temp_file.puts "sitearchdir = #{UNIX_ODBC_DIR}/lib"
      else
        temp_file.puts line
      end
    end
  end
  temp_file.rewind
  FileUtils.mv(temp_file.path, MAKE_FILE)
ensure
  temp_file.close
  temp_file.unlink
end

indent "Compiling..."
result = `make -C #{EXT}`
indent "Installing..."
result = `make -C #{EXT} install`

puts `ls -alh #{RUBY_ODBC_DIR}`
puts `ls -alh #{UNIX_ODBC_DIR}`
if $?.to_i == 0
  puts "=====> Done."
else
  raise "ERROR! #{$?}"
end

